<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <div class="row">
      <div class="col-6 offset-2">
        <h2 class="mt-3 mb-3">Listing Details</h2>
        <div class="card col-6" style="width: 18rem">
          <h5 class="card-text">
            <%= listing.title %>
          </h5>
          <img src="<%= listing.image.url %>" class="card-img-top" alt="..." />
          <div class="card-body">

            <p>
              <%= listing.description%>
            </p>
            <p>
              <%=listing.price%>
            </p>
            <p>
              <%=listing.location%>
            </p>
            <p>
              <%=listing.country%>
            </p>
          </div>
        </div>
        <div class="btns">
          
          <a class="btn btn-success " href="/listings/<%=listing._id%>/edit">Edit</a>
          <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST">
            <button class=" btn btn-dark">Delete</button>
          </form>
        </div>

      </div>
    </div>

    <div class="col-6 offset-2">
      <hr>
      <h4>Leave a Review</h4>
      <form>
        <div class="mb-3 mt-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5">
        </div>
        <div class="mb-3 mt-3">
          <label class="form-label" for="comment">Comments</label>
          <textarea class="form-control" name="review[comment]" id="review" cols="60" rows="10"></textarea>
        </div>
        <button class="btn btn-dark">Submit</button>
      </form>
    </div>
    </div>
  </body>